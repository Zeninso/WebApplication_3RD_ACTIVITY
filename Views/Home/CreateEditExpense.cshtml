
@{
	ViewData["Title"] = "Create or Edit Expense";
}

@model WebApplication3.Models.Expenses

<div class="text-center">
	<h1 class="display-4">Create or Edit Expenses</h1>
	<p>Create or Edit Some Expenses here.</p>

</div>
<form asp-action="CreateEditExpenseForm" asp-controller="Home">
	<label>ID</label>
	<input class="form-control" type="number" placeholder="0" asp-for="Id"/>

	<label class="mt-4">Value</label>
	<input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.1" />

	<label class="mt-4">Description</label>
	<input class="form-control" type="text" placeholder="Add a Description" asp-for="Description" />

	<button class="btn btn-primary mt-4 " type="submit">Confirm</button>

</form>